{
  "manifest_version": 3,
  "name": "Bookmark Reminder (Beta)",
  "version": "0.1.0",
  "description": "To remind user of a saved bookmark",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png"
  },
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "permissions": ["bookmarks", "storage", "alarms", "tabs"]
}
