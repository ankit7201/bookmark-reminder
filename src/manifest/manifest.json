{
  "manifest_version": 3,
  "name": "Bookmark Reminder",
  "version": "0.0.1",
  "description": "To remind user of a saved bookmark",
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "permissions": ["bookmarks", "storage", "alarms", "tabs"]
}
